<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iv_green_background">

    <ImageView
        android:id="@+id/iv_arrow_back"
        android:layout_width="16dp"
        android:layout_height="24dp"
        android:layout_margin="24dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_private_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/H2"
        android:text="Informasi Pribadi"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_arrow_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_arrow_back"/>

    <ImageView
        android:id="@+id/profile_picture_background"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_circle_white"
        app:layout_constraintTop_toBottomOf="@id/tv_private_information"
        app:layout_constraintBottom_toTopOf="@id/frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toTopOf="@id/profile_picture_background"
        app:layout_constraintBottom_toBottomOf="@id/profile_picture_background"
        app:layout_constraintStart_toStartOf="@id/profile_picture_background"
        app:layout_constraintEnd_toEndOf="@id/profile_picture_background"/>

    <ImageView
        android:id="@+id/add_picture_background"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/background_circle_green"
        app:layout_constraintBottom_toBottomOf="@id/profile_picture_background"
        app:layout_constraintEnd_toEndOf="@id/profile_picture_background"/>

    <ImageView
        android:id="@+id/iv_add_picture"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_add"
        app:layout_constraintTop_toTopOf="@id/add_picture_background"
        app:layout_constraintBottom_toBottomOf="@id/add_picture_background"
        app:layout_constraintStart_toStartOf="@id/add_picture_background"
        app:layout_constraintEnd_toEndOf="@id/add_picture_background"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/background_rounded_white_profile"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_picture"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle1"
            android:text="Nama"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/background_rounded_white"
            android:drawableEnd="@drawable/ic_pencil"
            tools:text="Fahmi"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="@id/tv_name"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle1"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edt_name"
            app:layout_constraintStart_toStartOf="@id/edt_name"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_email"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/background_rounded_white"
            android:drawableEnd="@drawable/ic_pencil"
            tools:text="Fahmi@gmail.com"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintStart_toStartOf="@id/tv_email"/>

        <TextView
            android:id="@+id/tv_telephone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle1"
            android:text="Nomor Telepon"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edt_email"
            app:layout_constraintStart_toStartOf="@id/edt_email"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_telephone_number"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/background_rounded_white"
            android:drawableEnd="@drawable/ic_pencil"
            tools:text="081xxxxxxxx"
            app:layout_constraintTop_toBottomOf="@id/tv_telephone_number"
            app:layout_constraintStart_toStartOf="@id/tv_telephone_number"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Subtitle1"
            android:text="Alamat"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edt_telephone_number"
            app:layout_constraintStart_toStartOf="@id/edt_telephone_number"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_address"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/background_rounded_white"
            android:drawableEnd="@drawable/ic_pencil"
            tools:text="Jl.jalan, Malang"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            app:layout_constraintStart_toStartOf="@id/tv_address"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            style="@style/Button"
            android:layout_width="224dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_background_green"
            android:elevation="4.dp"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:cornerRadius="14dp"
            app:layout_constraintTop_toBottomOf="@id/edt_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_logout"
            style="@style/Button"
            android:layout_width="224dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_background_white"
            android:elevation="4dp"
            android:text="Keluar"
            android:textAllCaps="false"
            android:textColor="@color/green_dark"
            app:layout_constraintTop_toBottomOf="@id/btn_save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>