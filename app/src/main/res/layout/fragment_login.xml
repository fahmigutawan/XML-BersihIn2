<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.auth.login.LoginFragment">

    <ImageView
        android:id="@+id/iv_login_screen"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/ic_vector_login"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        style="@style/H1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastikan Anda Masuk"
        app:layout_constraintTop_toBottomOf="@id/iv_login_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/H2"
        android:text="Agar Dapat Menikmati Semua Fitur BersihIn"
        android:textColor="@color/green_dark"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_masuk_dengan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        style="@style/Caption"
        android:text="Masuk Dengan"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        style="@style/Button"
        android:text="Masuk dengan Google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:icon="@drawable/ic_logo_google"
        app:iconTintMode="multiply"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        app:strokeColor="@color/gray_light"
        app:strokeWidth="1dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>